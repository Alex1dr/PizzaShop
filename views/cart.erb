<h2>Your cart</h2>
</br>

<table class="table table-striped">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Price</th>
    <th scope="col">Qty</th>
  </tr>
  </thead>
  <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
  <% @items.each do |item| %>

  <tr>
    <th scope="row"><%=item[0].id %></th>
    <td><%=item[0].name %></td>
    <td><%=item[0].price * item[1].to_i %> руб.</td>
    <td><%=item[1] %> шт.</td>
  </tr>
    <% total_price += item[0].price %>
    <% total_qty += item[1].to_i %>
  <% end %>
  <tr>
    <th></th>
    <td></td>
    <td>Total: <%= total_price %> руб.</td>
    <td><%= total_qty %> шт.</td>
  </tr>
  </tbody>
</table>


<form action="/place_order" method="POST">

  <input name="order[orders_input]" type="hidden" value="<%=@orders_input %>"  >

  <div class="form-group">
    <label>Ваше имя</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Введите ваше имя" >
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Ваш телефон" >
  </div>

  <div class="form-group">
    <label>Адрес доставки</label>
    <input id="dt" name="order[address]" type="text" class="form-control" placeholder="Введите адрес доставки" >
  </div>


  <button type="submit" class="btn btn-success btn-lg">Заказать</button>
</form>
